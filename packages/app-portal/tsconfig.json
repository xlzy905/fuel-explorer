{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.cache/app-portal.tsbuildInfo",
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client", "@types/react", "@types/react-dom", "jest"],
    "paths": {
      "app-commons": ["../app-commons/src"],
      "app-commons/*": ["../app-commons/src/*"],
      "~portal/*": ["./src/*"],
      "~public-portal/*": ["./public/*"],
      "@fuels/ui": ["../ui/src"],
      "@fuels/ui/*": ["../ui/src/*"]
    }
  },
  "include": ["./src", "../app-commons/src/vite-env.d.ts"]
}
